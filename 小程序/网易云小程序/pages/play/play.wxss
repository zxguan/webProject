/* pages/play/play.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
  color: #fff;
}

.bg{
  width: 100%;
  height: 100%;
  filter: blur(70px) brightness(65%);
  position: absolute;
  z-index: -999;
  top: 0;
  left: 0;
}

.scroll{
  /* vh */
  height: 70vh;
  /* background-color: red; */
}

.songInfo{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.song{
  font-size: 36rpx;
}

.control{
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.icon{
  font-size: 70rpx;
}

.scroll view{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #FF4500;
  white-space: nowrap;
  overflow: scroll;
  /* display: flex;
  justify-content: center; */
}

.now{
  color: #fff !important;
}